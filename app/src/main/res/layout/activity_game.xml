<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Placeholder for rendering content -->
    <SurfaceView
        android:id="@+id/game_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Buttons for switching renderers -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/button_renderer_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renderer 1" />

        <Button
            android:id="@+id/button_renderer_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renderer 2" />
    </LinearLayout>
</RelativeLayout>